<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
      <div id="error_explanation">
          <h2>Kļūdas saglabājot:</h2>
          
          <ul>
              <% course.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>     
          </ul>
      </div>
  <% end %>   
  
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :begins_at %>
    <%= form.datetime_field :begins_at %>
  </div>

  <div class="field">
    <%= form.label :ends_at %>
    <%= form.datetime_field :ends_at %>
  </div>

  <div class="field">
    <%= form.label :min_participants %>
    <%= form.number_field :min_participants %>
  </div>

  <div class="field">
    <%= form.label :max_participants %>
    <%= form.number_field :max_participants %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>